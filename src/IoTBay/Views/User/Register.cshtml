@model IoTBay.Models.Customer
@{
    ViewData["Title"] = "Register User Page";
}

<div>
    <h2 class="text-center" asp-action="">Register</h2>
    <div class="container-md">
        <form class="card p-4" asp-action="SubmitRegistration" method="post">
            <div class="card-body">
                <div class="form-group mb-2">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" type="text" placeholder="exampleuser123">
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="user@example.com">
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" class="form-control" type="password">
                </div>

                <div class="form-group mb-2">
                    <label asp-for="FullName">Full Name</label>
                    <input asp-for="FullName" class="form-control" type="text" placeholder="John Doe">
                </div>

                <div class="form-group mb-2">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" type="text"
                        placeholder="3 Example Lane Frenchs Forest, NSW Australia">
                </div>

                <button type="submit" class="btn btn-primary text-light">Register</button>
            </div>
        </form>
    </div>
</div>
